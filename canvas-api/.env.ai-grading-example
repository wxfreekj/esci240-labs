# OpenAI API Configuration
# Add this to your .env file

# OpenAI API Key (required for AI grading)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (optional, defaults to gpt-4o-mini for cost efficiency)
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# AI Grading Settings
# Maximum points threshold for human review (0-100)
# If AI assigns >= this percentage, auto-approve; otherwise flag for review
AI_AUTO_APPROVE_THRESHOLD=90

# Temperature for AI grading (0.0-1.0, lower = more consistent)
AI_GRADING_TEMPERATURE=0.3

# Whether to require human review for all AI grades (true/false)
REQUIRE_HUMAN_REVIEW=false
